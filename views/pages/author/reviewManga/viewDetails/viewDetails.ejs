<div class="details-manga">
  <div class="adminMenu">
    <%- include('../../../../components/authorMenu/authorMenu.ejs') %>
  </div>

  <div class="details-manga-info">
    <td>
      <%= manga.name %>
    </td>
    <td><img src="<%= manga.avatar %>" alt="avatar" width="50px" /></td>
    <td>
      <%= manga.category %>
    </td>
    <td>
      <%= manga.author %>
    </td>
    <td>
      <%= manga.description %>
    </td>
    <button onclick="createChapter('<%= manga._id %>')">create chapter</button>

    <!-- chapter -->
    <h1>chapter</h1>
    <% chapter.map((chapter, index)=>{%>
      <td>
        <a onclick="viewChap('<%= chapter._id %>')"> chap <%= chapter.title %></a>
        <button onclick="createChapter('<%= chapter._id %>')">
          <%= chapter.stautus %>
        </button>
        <button onclick="viewDetailChapter('<%= chapter._id %>')">
          view detail chapter
        </button>
        <button onclick="edichapter('<%= chapter._id %>', '<%= chapter.stautus %>')">edit chapter</button>
        <button onclick="deleteChapter('<%= chapter._id %>')">delete chapter</button>
      </td>
      <!-- <td>chap <%= chapter.content %></td> -->
      <%})%>

  </div>
</div>
