<div class="viewAllMangaAuthorPost">
  <div class="adminMenu">
    <%- include('../../../../components/authorMenu/authorMenu.ejs') %>
  </div>

  <div class="mangaAuthor-post">
    <div>
      <button onclick="authorCreateManga()">create manga</button>
    </div>

    <table class="table table-striped">
      <thead>
        <tr>
          <th scope="col">#</th>
          <th scope="col">name</th>
          <th scope="col">avatar</th>
          <th scope="col">category</th>
          <th scope="col">author</th>
          <th scope="col">action</th>
        </tr>
      </thead>
      <tbody>
        <% allManga.map((manga, index)=>{%>
          <tr>
            <th scope="row">
              <%=index + 1%>
            </th>
            <td>
              <%=manga.name%>
            </td>
            <td><img src="<%=manga.avatar%>" alt="" width="40px"></td>
            <td>
              <%=manga.category%>
            </td>
            <td>
              <%=user%>
            </td>
            <td>
              <button onclick="edit('<%= manga._id%>')">edit</button>
              <button onclick="viewDetails('<%= manga._id%>')">view detail</button>
              <button onclick="delette('<%= manga._id%>')">delete</button>
            </td>
          </tr>
          <%})%>
      </tbody>
    </table>
  </div>
</div>
