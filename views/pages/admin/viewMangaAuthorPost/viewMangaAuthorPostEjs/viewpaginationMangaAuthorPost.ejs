          <td><input type="number" placeholder="input price" id="price"></td>
          <td> 
            <button onclick="post('<%= manga._id%>')"><%= manga.stautus %></button>
            <button onclick="edit('<%= manga._id%>', '<%= manga.stautus %>')">edit</button>
            <button onclick="viewDetails('<%= manga._id%>')">view detail</button>
            <button onclick="delette('<%= manga._id%>')">delete</button>
          </td>
        </tr>
        <%})%>
      </tbody>
    </table>
