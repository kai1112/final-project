<title>Edit Manga</title>

<div class="editManga">
  <div class="adminMenu">
    <%- include('../../../../components/adminMenu/adminMenu.ejs') %>
  </div>



  <div class="editManga-info">
    <form enctype="multipart/form-data">
      <div class="form-group">
        <label for="exampleFormControlFile1">Chose avatar update</label>
        <input type="file" class="form-control-file" name="avatar" id="avatar" placeholder="avatar">
      </div>
      <div class="form-group" enctype="multipart/form-data">
        <label for="exampleFormControlInput1">Input price update</label>
        <input type="number" class="form-control" name="price" id="price" placeholder="input price manga">
      </div>
      <div class="form-group">
        <label for="exampleFormControlSelect1">category</label>
        <select class="form-control" id="exampleFormControlSelect1">
          <option>1</option>
          <option>2</option>
          <option>3</option>
        </select>
      </div>
      <div class="form-group">
        <label for="exampleFormControlTextarea1">description</label>
        <textarea class="form-control" name="category" id="category" placeholder="category" rows="3"></textarea>
      </div>
      <button type="button" onclick="edit()">submit</button>
    </form>
  </div>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js"
