<head>
  <meta charset="UTF-8" />
  <meta http-equiv="X-UA-Compatible" content="IE=edge" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.3.1/dist/css/bootstrap.min.css"
    integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous" />
</head>
<title>View Details Manga</title>

<div class="view-detail-manga">
  <div class="adminMenu">
    <%- include('../../../../components/adminMenu/adminMenu.ejs') %>
  </div>

  <div class="detail-Manga">
    <div class="img-Manga">
      <img src="<%= manga.avatar %>" alt="avatar" width="100px" />
    </div>
    <div class="info-Manga">
      <p>
        <%= manga.name %>
      </p>
      <p>
        <%= manga.category %>
      </p>
      <p>
        <%= manga.author %>
      </p>
      <p>
        <%= manga.description %>
      </p>
    </div>

    <!-- chapter -->
    <h1> list Chapter</h1>
    <table class="table table-striped">

      <tbody>
        <% chapter.map((chapter, index)=>{%>
          <tr>
            <th scope="row">
              <%=index + 1%>
            </th>
            <td scope="row">
              <a onclick="viewDetailChapter('<%= chapter._id %>')">
                <%= chapter.title %>
              </a>
            </td>
            <td scope="row">
              <button onclick="edichapter('<%= chapter._id %>')">edit chapter</button>
              <button onclick="deleteChapter('<%= chapter._id %>')">delete chapter</button>
            </td>
          </tr>
          <%})%>
      </tbody>
    </table>
  </div>
</div>

<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js"
