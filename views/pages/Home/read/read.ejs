    <!-- menu -->
    <!-- main -->
    <div class="feature-bar common-style">
        <a onclick="prev('<%=chapter.chap %>')" class="feature-bar-pre-chapter"><i
                class="fa-solid fa-arrow-left-long"></i></a>
        <a href="/" class="feature-bar-home"><i class="fa-solid fa-house"></i></a>
        <button class="select-chapter">Select chapter</button>
        <a onclick="window.scrollTo(0, $('.comment-area').offset().top)" class="feature-bar-comment">
            <i class="fa-solid fa-comments"></i>
        </a>
        <a onclick="next('<%=chapter.chap %>','<%= allChapter.length + 1%>')" class="feature-bar-next-chapter"><i
                class="fa-solid fa-arrow-right-long"></i></a>
        <div class="feature-bar-chapter-list hidden">
            <%for(let i=0; i < allChapter.length; i++){%>
                <button onclick="goToChap('<%=allChapter[i].chap%>')"><a>Chương <%=allChapter[i].chap%>:
                            <%=allChapter[i].title%></a></button>
                <%}%>
        </div>
    </div>
    <div class="main-container common-style">
        <div class="chapter-transfer-top">
            <a onclick="prev('<%=chapter.chap %>')" class="pre-chapter-top"><i class="fa-solid fa-arrow-left-long"></i>
                Chương trước</a>
            <a onclick="next('<%=chapter.chap %>','<%= allChapter.length + 1%>')" class="next-chapter-top">Chương sau <i
                    class="fa-solid fa-arrow-right-long"></i></a>
        </div>
        <div class="item-title">
            Chương <%=chapter.chap %> : <%=chapter.title %>
        </div>
        <div class="item-info">
            <a href="" class="item-name"><i class="fa-solid fa-book"></i> Khấu Văn Tiên Đạo</a>
            <a href="" class="item-author"><i class="fa-solid fa-file-pen"></i> Miss</a>
            <div class="item-word"><i class="fa-solid fa-t"></i> 1234 chữ</div>
            <div class="item-like"><i class="fa-solid fa-thumbs-up"></i> 62</div>
            <div class="item-time"><i class="fa-solid fa-clock"></i> 2021-02-26 21:53:49</div>
        </div>
        <div class="chapter-content">
            <%= chapter.content%>
        </div>

    </div>
    <div class="chapter-transfer-bottom common-style">
        <a onclick="prev('<%=chapter.chap %>')" class="pre-chapter-bottom"><i class="fa-solid fa-arrow-left-long"></i>
            Chương trước</a>
        <a onclick="next('<%=chapter.chap %>','<%= allChapter.length + 1%>')" class="next-chapter-bottom">Chương sau <i
                class="fa-solid fa-arrow-right-long"></i></a>
    </div>
    <div class="comment-area common-style">
        <div class="comment-component ">
            <div class="comment-container">
                <div class="comment-top-feature">
                    <h2>375 bình luận</h2>
                    <form enctype="multipart/form-data" class="addfile-form">
                        <label class="add-file-cover" for="addfile">Add images or files</label>
                        <input type="file" name="addfile" id="addfile" />
                    </form>
                </div>
                <div class="your-comment">
                    <a href="">
                        <img src="https://metruyenchu.com/images/avatar-profile.png?97b80827721f6116c3dbc797d11d629b"
                            alt="">
                    </a>
                    <textarea name="" id="title" placeholder="Bình luận của bạn"></textarea>
                    <button class="send-btn" onclick="addComment('<%= chapter._id%>')">
                        <i class="fas fa-paper-plane    "></i>
                    </button>
                </div>
                <div class="comment">
                    <%- include('./comment.ejs') %>
                </div>
                <%for(let i=0; i <total; i ++){ %>
                    <button onclick="nextComment('<%=i+1%>')">
                        <%=i+ 1%>
                    </button>
                    <%}%>


            </div>

        </div>
    </div>
    <!-- main -->

    <!-- footer -->
    <footer>
        <div class="footer">
            <div class="footer-left">
                <a href="" class="logo">
                    <img src="http://truyen48.com/template/frontend/images/logo.png" alt="">
