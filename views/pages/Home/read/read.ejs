                <i class="fa-regular fa-lightbulb"></i>
            </button>
            <div class="rightFeature">
                <button class="show-search-bar">
                    <i class="fa fa-search" aria-hidden="true"></i>
                </button>
                <button class="btnFeature">Đăng kí</button>
                <button class="btnFeature">Đăng nhập</button>
            </div>
            <div class="search-bar">
                <input class="search-field fieldmobile" type="text" oninput="type_search('mobile')"
                    placeholder="Search...">
                <button class="search-btn">
                    <i class="fa-solid fa-magnifying-glass"></i>
                </button>
                <div class="search-result resultmobile">
                    <a class="search-item" href="">
